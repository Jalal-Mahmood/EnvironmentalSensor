<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.msiworldwide.environmentalsensor.NewWaterSource">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/waterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text|textPersonName"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/take_picture"
        android:layout_width="179dp"
        android:layout_height="66dp"
        android:onClick="takePicture"
        android:text="Take Picture"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/add_source" />

    <Button
        android:id="@+id/save_water"
        android:layout_width="136dp"
        android:layout_height="59dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="32dp"
        android:background="#C5E0B4"
        android:gravity="left|center_vertical"
        android:onClick="saveWater"
        android:text="    Save"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/source_count"
        android:layout_width="211dp"
        android:layout_height="25dp"
        android:text="TextView"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/waterName"
        app:layout_constraintHorizontal_bias="0.503" />

    <Button
        android:id="@+id/measure_water"
        android:layout_width="179dp"
        android:layout_height="66dp"
        android:onClick="MeasureWaterLocation"
        android:text="Measure"
        android:gravity="center"
        android:textSize="18sp"
        android:background="#5B9BD5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/take_picture"
        app:layout_constraintVertical_bias="0.937" />

    <Button
        android:id="@+id/add_source"
        android:layout_width="179dp"
        android:layout_height="66dp"
        android:layout_marginBottom="16dp"
        android:background="#5B9BD5"
        android:onClick="addSource"
        android:text="Add Source"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/save_water"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
