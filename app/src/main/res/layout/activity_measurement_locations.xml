<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.msiworldwide.environmentalsensor.MeasurementLocations">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/PreviousLocations"
        android:layout_width="295dp"
        android:layout_height="108dp"
        android:text="Load Previous Locations"
        android:textSize="24sp"
        android:background="#5B9BD5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/NewLocations"
        android:layout_width="295dp"
        android:layout_height="108dp"
        android:text="Insert New Locations"
        android:textSize="24sp"
        android:background="#ED7D31"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/PreviousLocations"
        app:layout_constraintHorizontal_bias="0.507" />

    <Button
        android:id="@+id/RecommendLocations"
        android:layout_width="295dp"
        android:layout_height="108dp"
        android:text="Use Recommended Locations"
        android:textSize="24sp"
        android:background="#70AD47"
        android:onClick="openMeasurement"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/NewLocations"
        app:layout_constraintHorizontal_bias="0.507" />

</android.support.constraint.ConstraintLayout>
