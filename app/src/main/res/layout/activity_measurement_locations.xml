<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msiworldwide.environmentalsensor.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingRight="32dp"
        android:paddingLeft="32dp"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/PreviousLocations"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:text="Load Previous Locations"
            android:textSize="24sp"
            android:background="#5B9BD5" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/NewLocations"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:text="Insert New Locations"
            android:textSize="24sp"
            android:background="#ED7D31"/>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/RecommendLocations"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:text="Use Recommended Locations"
            android:textSize="24sp"
            android:background="#70AD47"
            android:onClick="openMeasurement" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>