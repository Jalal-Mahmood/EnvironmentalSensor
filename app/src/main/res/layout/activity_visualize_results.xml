<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msiworldwide.environmentalsensor.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingRight="32dp"
        android:paddingLeft="32dp"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/moisture_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#5B9BD5"
            android:onClick="openSoilMoisture"
            android:text="Soil Moisture"
            android:textSize="24sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/nutrition_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#70AD47"
            android:onClick="openSoilNutrition"
            android:text="Soil Nutrition"
            android:textSize="24sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/temp_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FF5050"
            android:onClick="openTemperature"
            android:text="Temperature"
            android:textSize="24sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/humidity_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#ED7D31"
            android:onClick="openHumidity"
            android:text="Humidity"
            android:textSize="24sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/light_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFC000"
            android:onClick="openSunlight"
            android:text="Sunlight"
            android:textSize="24sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>